generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("VIEWER") // OWNER, ADMIN, OPERATOR, VIEWER
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  auditLogs     AuditLog[]
}

model Tenant {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique // for subdomain
  status      String   @default("ACTIVE") // ACTIVE, SUSPENDED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  domains     Domain[]
  deployments Deployment[]
  policy      EdgePolicy?
  auditLogs   AuditLog[]
}

model Domain {
  id           String       @id @default(cuid())
  hostname     String       @unique
  tenantId     String
  tenant       Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())

  certificate  Certificate?
}

model Certificate {
  id             String   @id @default(cuid())
  domainId       String   @unique
  domain         Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  provider       String   @default("LETS_ENCRYPT")
  validFrom      DateTime
  validTo        DateTime
  status         String   // ISSUED, RENEWING, EXPIRED, FAILED
}

model EdgePolicy {
  id                   String  @id @default(cuid())
  tenantId             String  @unique
  tenant               Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Rate Limiting
  rateLimitRps         Int     @default(100)
  rateLimitBurst       Int     @default(20)

  // Headers
  enableCsp            Boolean @default(false)
  enableHsts           Boolean @default(true)
  enableXFrame         Boolean @default(true)
  enableXContent       Boolean @default(true)

  // IP Access
  ipAllowList          String? // JSON array or comma separated
  ipDenyList           String?

  updatedAt            DateTime @updatedAt
}

model Deployment {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  configSnapshot String // The exact Nginx config used
  status      String   // SUCCESS, FAILED, ROLLBACK
  deployedAt  DateTime @default(now())
  deployedBy  String?  // User ID or "SYSTEM"
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  actorId   String?
  actor     User?    @relation(fields: [actorId], references: [id])
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  details   String?  // JSON
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
}
