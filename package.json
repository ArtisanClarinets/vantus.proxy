{
  "name": "vantus-proxy-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "database",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "node scripts/setup-env.js && npm run generate-client && node scripts/try-seed.js",
    "generate-client": "npm run generate --workspace=database",
    "start": "tsx scripts/orchestrator.ts",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "@playwright/test": "^1.41.2"
  },
  "engines": {
    "node": ">=18"
  }
}
